<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserStatisticsActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Parking Statistics"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_parking_sessions"
        app:layout_constraintEnd_toEndOf="@+id/btn_parking_sessions"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_parking_sessions"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_parking_sessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="16dp"
        android:text="Parking Sessions"
        app:layout_constraintBottom_toTopOf="@+id/btn_duration_stats"
        app:layout_constraintEnd_toEndOf="@+id/btn_duration_stats"
        app:layout_constraintStart_toStartOf="@+id/btn_duration_stats"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_duration_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="15dp"
        android:text="Duration Statistics"
        app:layout_constraintBottom_toTopOf="@+id/btn_cost_stats"
        app:layout_constraintEnd_toEndOf="@+id/btn_cost_stats"
        app:layout_constraintStart_toStartOf="@+id/btn_cost_stats"
        app:layout_constraintTop_toBottomOf="@+id/btn_parking_sessions" />

    <Button
        android:id="@+id/btn_cost_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="15dp"
        android:text="Cost Statistics"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_duration_stats"
        tools:layout_editor_absoluteX="-16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>